<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/button_details"
        android:layout_width="60dp"
        android:layout_height="38dp"
        android:backgroundTint="@color/secondary_color"
        android:contentDescription="@string/edit_nota"
        android:minHeight="48dp"
        android:src="@drawable/ic_baseline_edit_24"
        app:layout_constraintBottom_toBottomOf="@+id/content_main"
        app:layout_constraintEnd_toStartOf="@+id/button_delete"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="12.5"
        app:layout_constraintStart_toEndOf="@+id/content_main"
        app:layout_constraintTop_toTopOf="@+id/content_main"
        tools:ignore="VisualLintBounds" />

    <TextView
        android:id="@+id/content_main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/campo_bonito"
        android:maxLength="20"
        android:maxLines="1"
        android:paddingStart="9dp"
        android:paddingEnd="9dp"
        app:layout_constraintBottom_toBottomOf="@+id/title_main"
        app:layout_constraintEnd_toStartOf="@+id/button_details"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="25"
        app:layout_constraintStart_toEndOf="@+id/title_main"
        app:layout_constraintTop_toTopOf="@+id/title_main"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Cuerpo de la nota" />

    <TextView
        android:id="@+id/title_main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/campo_bonito"
        android:maxLength="20"
        android:maxLines="1"
        android:paddingStart="9dp"
        android:paddingEnd="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/content_main"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:text="Titulo" />

    <ImageButton
        android:id="@+id/button_delete"
        android:layout_width="60dp"
        android:layout_height="38dp"
        android:backgroundTint="@color/secondary_color"
        android:contentDescription="@string/delete_nota"
        android:minHeight="48dp"
        android:src="@drawable/ic_baseline_delete_24"
        app:layout_constraintBottom_toBottomOf="@+id/button_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="12.5"
        app:layout_constraintStart_toEndOf="@+id/button_details"
        app:layout_constraintTop_toTopOf="@+id/button_details"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="VisualLintBounds" />

</androidx.constraintlayout.widget.ConstraintLayout>